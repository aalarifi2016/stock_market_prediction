option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "stock_prediction.settings"
  aws:elasticbeanstalk:container:python:
    WSGIPath: "stock_prediction.wsgi:application"
  aws:elasticbeanstalk:environment:process:default:
    HealthCheckPath: "/api"
    MatcherHTTPCode: "200-499"

container_commands:
  01_makemigrations:
    command: "python3 manage.py makemigrations --noinput"
    leader_only: true
  02_migrate:
    command: "python3 manage.py migrate --noinput"
    leader_only: true
  03_createsu:
    command: "python3 manage.py createsu"
  04_collectstatic:
    command: "python3 manage.py collectstatic --noinput"
    leader_only: true